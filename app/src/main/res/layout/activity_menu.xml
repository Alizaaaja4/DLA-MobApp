<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.rfid.hf.SplashActivity">

    <!-- Background Gambar Layar -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_menu" />

    <ImageButton
        android:id="@+id/btn_notif"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:src="@drawable/btn_notif"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Notif Button" />

    <!-- Judul Utama -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_an_action"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:layout_margin="28dp" />

    <!-- Slogan -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slogan_menu"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="italic"
        android:paddingTop="150dp"
        android:layout_margin="28dp"
        android:paddingEnd="80dp"/>

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:padding="6dp"
        android:rowCount="1">

        <!-- Button RFID Scan -->
        <ImageButton
            android:id="@+id/btn_rfid_scan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="Button RFID Scan"
            android:src="@drawable/btn_rfid_scan" />

        <!-- Button Stock Opname -->
        <ImageButton
            android:id="@+id/btn_stock_opname"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="Button Stock Opname"
            android:src="@drawable/btn_stock_opname" />

        <!--Button Generate Code -->
        <ImageButton
            android:id="@+id/btn_generate_code"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="Button Generate Code"
            android:src="@drawable/btn_generate_code" />

        <!-- Button Help/ Guide -->
        <ImageButton
            android:id="@+id/btn_help_guid"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="Button Help/ Guide"
            android:src="@drawable/btn_help_guid" />

    </GridLayout>

    <!-- Logo di pojok center bawah -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_tip" />

</RelativeLayout>
