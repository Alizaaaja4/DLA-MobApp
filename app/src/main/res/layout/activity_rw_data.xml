<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	android:background="#F9F9F9">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:layout_marginBottom="16dp">

		<!-- Result -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3"
			android:layout_marginBottom="12dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Result:"
				android:textStyle="bold"
				android:gravity="end|center_vertical"
				android:textSize="16sp" />

			<TextView
				android:id="@+id/rw_result"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:textColor="#cc0000"
				android:textSize="16sp"
				android:gravity="center" />
		</LinearLayout>

		<!-- UID -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3"
			android:layout_marginBottom="10dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="UID:"
				android:gravity="end|center_vertical"
				android:paddingEnd="8dp" />

			<Spinner
				android:id="@+id/uid_spinner"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="2" />
		</LinearLayout>

		<!-- Type -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3"
			android:layout_marginBottom="10dp">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Type:"
				android:gravity="end|center_vertical"
				android:paddingEnd="8dp" />

			<Spinner
				android:id="@+id/mtype_spinner"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="2" />
		</LinearLayout>

		<!-- Block and Block Length -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="6"
			android:layout_marginBottom="10dp">

			<EditText
				android:id="@+id/et_wordptr"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="3"
				android:inputType="number"
				android:hint="Block(Dec)" />

			<EditText
				android:id="@+id/et_num"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="3"
				android:inputType="number"
				android:hint="Block length(Dec)"
				android:layout_marginStart="8dp"/>
		</LinearLayout>

		<!-- Write Data & Read Data -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="6"
			android:layout_marginBottom="10dp">

			<EditText
				android:id="@+id/et_content"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="3"
				android:hint="Write Data (Hex)"
				android:inputType="text" />

			<EditText
				android:id="@+id/et_read"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="3"
				android:hint="Read Data (Hex)"
				android:layout_marginStart="8dp"
				android:inputType="text" />
		</LinearLayout>

		<!-- Buttons Read/Write Block -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3"
			android:layout_marginBottom="10dp">

			<Button
				android:id="@+id/button_read"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Read Block"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_write"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Write Block"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_readmul"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Read Blocks"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />
		</LinearLayout>

		<!-- Password -->
		<EditText
			android:id="@+id/et_pwd"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:hint="Password (Hex)"
			android:layout_marginBottom="10dp"
			android:inputType="text" />

		<!-- Set Password, Write Password, Protect AFI, EAS -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="4"
			android:layout_marginBottom="10dp">

			<Button
				android:id="@+id/button_setpwd"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Set Password"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_writepwd"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Write Password"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_protect_AFI"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Protect AFI"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_protect_EAS"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Protect EAS"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />
		</LinearLayout>

		<!-- AFI Field -->
		<EditText
			android:id="@+id/et_AFI"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:hint="AFI (Hex)"
			android:layout_marginBottom="10dp"
			android:inputType="text" />

		<!-- AFI Buttons -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2"
			android:layout_marginBottom="10dp">

			<Button
				android:id="@+id/button_writeafi"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Set AFI"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_readafi"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Read AFI"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />
		</LinearLayout>

		<!-- EAS Buttons -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="3"
			android:layout_marginBottom="10dp">

			<Button
				android:id="@+id/button_seteas"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Set EAS"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_reseteas"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="Reset EAS"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />

			<Button
				android:id="@+id/button_detecteas"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="EAS Alarm"
				android:layout_margin="4dp"
				android:background="@drawable/color_button_selector" />
		</LinearLayout>

	</LinearLayout>
</ScrollView>
